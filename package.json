{
  "name": "campus-event-management",
  "version": "1.0.0",
  "description": "Campus Event Management Platform - A comprehensive system for managing college events, student registrations, and attendance tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node database/sampleData.js",
    "build": "npm run build:admin && npm run build:student",
    "build:admin": "cd frontend/admin-portal && npm run build",
    "build:student": "cd frontend/student-app && npm run build",
    "dev:admin": "cd frontend/admin-portal && npm start",
    "dev:student": "cd frontend/student-app && npm start",
    "install:frontend": "cd frontend/admin-portal && npm install && cd ../student-app && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "campus",
    "event-management",
    "student-portal",
    "admin-portal",
    "registration",
    "attendance",
    "reporting"
  ],
  "author": "Campus Event Management Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "react-chartjs-2": "^5.3.0",
    "react-router-dom": "^7.8.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
